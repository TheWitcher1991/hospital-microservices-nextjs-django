{
  "trailingComma": "all",
  "tabWidth": 4,
  "useTabs": true,
  "semi": false,
  "jsxSingleQuote": true,
  "singleQuote": true,
  "arrowParens": "avoid",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/widgets/(.*)$",
    "^@/features/(.*)$",
    "^@/providers/(.*)$",
    "^@/models/(.*)$",
    "^@/hooks/(.*)$",
    "^@/store/(.*)$",
    "^@/shared/(.*)$",
    "^./(.*)",
    "(.css)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
